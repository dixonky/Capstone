<h2>Current Records</h2>
<table id="recordTab" class="recordTable">
    <tr>
        <th>Record Number</th>
        <th>Record Name</th>
        <th>Record Data</th>
        <th>Record URL</th>
    </tr>
    {{#each records}}
        <tr>
            <td>{{record_id}}</td>
            <td>{{record_name}}</td>
             <td>{{record_data}}</td>
             <td>{{record_URL}}</td>
           <td>
                <button onclick="" type="button">Delete</button>
            </td>
            <td>
                <button onclick="" type="button">Update</button>
            </td>
        </tr>
    {{/each}}
</table>


<br>
<h2>Add Record</h2>
<form id="addRecordForm" method="post">
Record name:<br>
  <input type="text" name="record_name">
  <br>
Record (password):<br>
  <input type="text" name="record_data">
  <br>
Corresponding Website URL:<br>
  <input type="text" name="record_URL">
  <br>    
  <input type="submit" id="addRecord" value="Submit">
</form> 
